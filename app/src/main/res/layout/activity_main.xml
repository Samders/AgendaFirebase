<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alberthneerans.agendafirebase.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="AGENDA"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/eId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/id"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/eNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nombre"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/eTelefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/telefono"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/eMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/correo"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <Button
        android:id="@+id/bInsertar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/insertar"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <Button
        android:id="@+id/bActualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/actualizar"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <Button
        android:id="@+id/bBorrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/borrar"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <Button
        android:id="@+id/bBuscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/buscar"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <Button
        android:id="@+id/bLimpiar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/limpiar"
        android:textColor="@color/black"
        android:textSize="20dp" />

</LinearLayout>
